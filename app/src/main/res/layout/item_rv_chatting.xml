<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_margin="5sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_chat_user_profile"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_at"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txt_chat_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_chat_user_profile" />

        <TextView
            android:id="@+id/txt_chat_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="#80808080"
            android:textSize="13sp"
            android:layout_marginLeft="5sp"
            app:layout_constraintBottom_toBottomOf="@id/txt_chat_user_name"
            app:layout_constraintLeft_toRightOf="@id/txt_chat_user_name" />

        <TextView
            android:id="@+id/txt_chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/txt_chat_user_name"
            app:layout_constraintStart_toStartOf="@id/txt_chat_user_name" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>