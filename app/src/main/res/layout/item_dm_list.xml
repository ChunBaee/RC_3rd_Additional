<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/img_dm_item"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/btn_dm_list_unclicked"
            android:src="@color/selector_dm_list_icon_color"
            android:layout_marginVertical="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_dm_item_inner"
            android:layout_width="20sp"
            android:layout_height="20sp"
            app:layout_constraintTop_toTopOf="@id/img_dm_item"
            app:layout_constraintBottom_toBottomOf="@id/img_dm_item"
            app:layout_constraintRight_toRightOf="@id/img_dm_item"
            app:layout_constraintLeft_toLeftOf="@id/img_dm_item" />

        <ImageView
            android:id="@+id/img_dm_side_item"
            android:layout_width="7sp"
            android:layout_height="38sp"
            android:visibility="invisible"
            android:background="@drawable/dm_list_sidebar_clicked"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/dm_divider"
            android:layout_width="35sp"
            android:layout_height="0.3dp"
            android:visibility="gone"
            android:background="#25292C"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            app:layout_constraintTop_toBottomOf="@id/img_dm_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/img_dm_item"
            app:layout_constraintEnd_toEndOf="@id/img_dm_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>